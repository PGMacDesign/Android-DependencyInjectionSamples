<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >

    <RelativeLayout
        android:id="@+id/butter_knife_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/butter_knife_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button 1"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/butter_knife_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text 1"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/butter_knife_layout_2"
        android:layout_below="@+id/butter_knife_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/butter_knife_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button 1"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/butter_knife_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text 1"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/butter_knife_layout_3"
        android:layout_below="@+id/butter_knife_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/butter_knife_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button 1"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/butter_knife_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text 1"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/butter_knife_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butter_knife_layout_3"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/butter_knife_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button 1"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/butter_knife_tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text 1"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.pgmacdesign.dependencyinjectionsamples.ButterKnifeFragment"
        android:layout_below="@+id/butter_knife_layout_4"
        android:layout_centerHorizontal="true"
        android:id="@+id/butter_knife_fragment_fragment" />


</RelativeLayout>